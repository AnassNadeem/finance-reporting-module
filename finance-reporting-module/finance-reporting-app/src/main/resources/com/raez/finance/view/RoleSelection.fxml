<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #F9FAFB;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.raez.finance.controller.RoleSelectionController">
   <children>
      <VBox alignment="CENTER" maxWidth="450.0" spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 8;">
         <padding>
            <Insets bottom="48.0" left="48.0" right="48.0" top="48.0" />
         </padding>
         <effect>
            <DropShadow blurType="GAUSSIAN" height="20.0" radius="9.5" width="20.0">
               <color>
                  <Color opacity="0.1" />
               </color>
            </DropShadow>
         </effect>
         <children>
            
            <VBox alignment="CENTER" spacing="8.0">
               <children>
                  <Label text="RAEZ Finance Portal" textFill="#111827">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Label text="Select Your Role" textFill="#4B5563">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </VBox>

            <VBox spacing="16.0">
               <children>
                  <Button fx:id="btnSuperAdmin" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleSuperAdminSelect" prefHeight="50.0" style="-fx-background-color: #1E293B; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" text="Super Admin Login">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnFinanceAdmin" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleFinanceAdminSelect" prefHeight="50.0" style="-fx-background-color: white; -fx-border-color: #111827; -fx-border-width: 2; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #111827; -fx-font-weight: bold; -fx-cursor: hand;" text="Finance Admin Login">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </VBox>

            <VBox spacing="8.0" style="-fx-border-color: #E5E7EB; -fx-border-width: 1 0 0 0;">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
               <children>
                  <Label alignment="CENTER" maxWidth="Infinity" text="Demo Credentials:" textFill="#4B5563" />
                  <Label text="Super Admin: admin@raez.com / admin123" textFill="#374151">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="Finance Admin: finance@raez.com / password123" textFill="#374151">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="First Time User: new.user@raez.com / temp123" textFill="#374151">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
         </children>
      </VBox>
   </children>
</StackPane>