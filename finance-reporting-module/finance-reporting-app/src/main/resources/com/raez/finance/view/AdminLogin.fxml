<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: #F9FAFB;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.raez.finance.controller.AdminLoginController">
   <padding>
      <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
   </padding>
   <children>
      
      <VBox maxWidth="450.0" spacing="24.0" alignment="CENTER_LEFT">
         <children>
            
            <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #4B5563; -fx-cursor: hand;" text="â† Back to Role Selection">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <VBox style="-fx-background-color: white; -fx-background-radius: 8;" spacing="24.0">
               <padding>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </padding>
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="20.0" radius="9.5" width="20.0">
                     <color>
                        <Color opacity="0.1" />
                     </color>
                  </DropShadow>
               </effect>
               <children>
                  
                  <VBox alignment="CENTER" spacing="8.0">
                     <children>
                        <StackPane maxHeight="80.0" maxWidth="80.0" prefHeight="80.0" prefWidth="80.0" style="-fx-background-color: #1E2939; -fx-background-radius: 8;">
                           <children>
                              <SVGPath content="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" fill="TRANSPARENT" stroke="WHITE" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="2" scaleX="1.5" scaleY="1.5"/>
                           </children>
                           <VBox.margin>
                              <Insets bottom="16.0" />
                           </VBox.margin>
                        </StackPane>
                        <Label text="Admin Login" textFill="#111827">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Restricted Access - Admin Only" textFill="#4B5563">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <VBox spacing="16.0">
                     <children>
                        
                        <VBox spacing="8.0">
                           <children>
                              <Label text="Admin Username / Email" textFill="#374151" />
                              <TextField fx:id="txtEmail" prefHeight="45.0" promptText="Enter admin email" style="-fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-color: white;" />
                           </children>
                        </VBox>

                        <VBox spacing="8.0">
                           <children>
                              <Label text="Password" textFill="#374151" />
                              <PasswordField fx:id="txtPassword" prefHeight="45.0" promptText="Enter admin password" style="-fx-background-radius: 8; -fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-color: white;" />
                           </children>
                        </VBox>

                        <VBox fx:id="errorBox" managed="false" visible="false" style="-fx-background-color: #FEF2F2; -fx-border-color: #FECACA; -fx-border-radius: 8; -fx-background-radius: 8;">
                           <padding>
                              <Insets bottom="12.0" left="16.0" right="16.0" top="12.0" />
                           </padding>
                           <children>
                              <Label fx:id="lblError" text="Invalid credentials" textFill="#B91C1C" wrapText="true" />
                           </children>
                        </VBox>

                        <Button fx:id="btnLogin" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLogin" prefHeight="48.0" style="-fx-background-color: #1E2939; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" text="Login as Admin">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="8.0" />
                           </VBox.margin>
                        </Button>

                        <HBox alignment="CENTER">
                           <children>
                              <Hyperlink fx:id="linkForgotPassword" onAction="#handleForgotPassword" style="-fx-text-fill: #1E2939; -fx-border-color: transparent;" text="Forgot Password?" />
                           </children>
                        </HBox>
                        
                     </children>
                  </VBox>

                  <VBox style="-fx-background-color: #FEFCE8; -fx-border-color: #FEF08A; -fx-border-radius: 8; -fx-background-radius: 8;">
                     <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
                     </padding>
                     <children>
                        <Label text="Warning: This login is for authorized administrators only. All access attempts are logged and monitored." textFill="#854D0E" wrapText="true">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>

                  <HBox alignment="CENTER">
                     <children>
                        <Hyperlink fx:id="linkReportIssue" onAction="#handleReportIssue" style="-fx-text-fill: #1E2939; -fx-border-color: transparent;" text="Report Technical Issues" />
                     </children>
                     <VBox.margin>
                        <Insets top="-8.0" />
                     </VBox.margin>
                  </HBox>

               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</StackPane>