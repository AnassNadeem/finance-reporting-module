<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="70.0" style="-fx-background-color: white; -fx-border-color: #E5E7EB; -fx-border-width: 0 0 1 0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.raez.finance.controller.TopBarController">
   <padding>
      <Insets left="32.0" right="32.0" />
   </padding>
   <children>
      
      <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" maxWidth="600.0" prefHeight="40.0" spacing="8.0" style="-fx-border-color: #D1D5DB; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
               <padding>
                  <Insets left="12.0" right="12.0" />
               </padding>
               <children>
                  <SVGPath content="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" fill="TRANSPARENT" stroke="#9CA3AF" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="2.0" />
                  
                  <TextField fx:id="txtSearch" promptText="Search transactions, customers, products..." style="-fx-background-color: transparent; -fx-prompt-text-fill: #9CA3AF;" HBox.hgrow="ALWAYS">
                     <font><Font size="14.0" /></font>
                  </TextField>
               </children>
            </HBox>
         </children>
      </HBox>

      <HBox alignment="CENTER_RIGHT" spacing="24.0">
         <children>
            
            <Button fx:id="btnNotifications" mnemonicParsing="false" onAction="#handleNotificationsClick" style="-fx-background-color: transparent; -fx-cursor: hand;">
               <graphic>
                  <StackPane>
                     <children>
                        <SVGPath content="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9 M13.73 21a2 2 0 0 1-3.46 0" fill="TRANSPARENT" stroke="#4B5563" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="2.0" />
                        <Circle fill="#EF4444" radius="4.0" StackPane.alignment="TOP_RIGHT">
                           <StackPane.margin>
                              <Insets right="2.0" top="2.0" />
                           </StackPane.margin>
                        </Circle>
                     </children>
                  </StackPane>
               </graphic>
            </Button>

            <Button fx:id="btnProfile" mnemonicParsing="false" onAction="#handleProfileClick" style="-fx-background-color: transparent; -fx-cursor: hand;">
               <graphic>
                  <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-border-color: #E5E7EB; -fx-border-width: 0 0 0 1;">
                     <padding>
                        <Insets left="16.0" />
                     </padding>
                     <children>
                        <StackPane prefHeight="40.0" prefWidth="40.0" style="-fx-background-color: #1E2939; -fx-background-radius: 20;">
                           <children>
                              <Label fx:id="lblInitials" text="AD" textFill="WHITE">
                                 <font><Font name="System Bold" size="14.0" /></font>
                              </Label>
                           </children>
                        </StackPane>
                        
                        <VBox alignment="CENTER_LEFT">
                           <children>
                              <Label fx:id="lblName" text="System Admin" textFill="#111827">
                                 <font><Font name="System Bold" size="14.0" /></font>
                              </Label>
                              <Label fx:id="lblRole" text="Admin" textFill="#6B7280">
                                 <font><Font size="12.0" /></font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <SVGPath content="M6 9l6 6 6-6" fill="TRANSPARENT" stroke="#6B7280" strokeLineCap="ROUND" strokeLineJoin="ROUND" strokeWidth="2.0" />
                     </children>
                  </HBox>
               </graphic>
            </Button>

         </children>
      </HBox>
   </children>
</HBox>